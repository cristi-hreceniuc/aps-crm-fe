<%- include('partials/head') %>
<%- include('partials/navbar') %>

<section class="container center pad">
  <div class="auth-card">
    <h1>Login</h1>
    <% if (error) { %><div class="alert alert-danger"><%= error %></div><% } %>

    <!-- UN SINGUR FORMULAR -->
    <form id="loginForm" class="form">
      <label>Email</label>
      <input id="email" name="email" type="email" required placeholder="you@example.com" value="<%= email %>" />
      <label>Parolă</label>
      <input id="password" name="password" type="password" required placeholder="••••••••" />
      <button class="btn btn-primary" type="submit">Autentificare</button>
    </form>
  </div>
</section>

<script>
document.getElementById('loginForm').addEventListener('submit', async (e) => {
  e.preventDefault();
  const email = document.getElementById('email').value.trim();
  const password = document.getElementById('password').value;

  try {
    const res = await fetch('/login', {
      method: 'POST',
      headers: { 'Content-Type': 'application/json' },
      body: JSON.stringify({ email, password })
    });

    if (res.redirected) {
      window.location.href = res.url;
      return;
    }
    // dacă serverul returnează pagina cu eroare, o rerandăm
    const html = await res.text();
    document.open(); document.write(html); document.close();
  } catch {
    alert('Eroare la conectare');
  }
});
</script>

