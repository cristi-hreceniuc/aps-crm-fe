      <div class="user-block" title="<%= displayName %>">
        <div class="avatar">
          <%= initial %>
        </div>
        <div class="user-text">
          <div class="user-name">
            <%= displayName %>
          </div>
          <% if (emailSafe) { %>
            <div class="user-email">
              <%= emailSafe %>
            </div>
            <% } %>
        </div>
      </div>
      <form method="post" action="/logout" class="logout-form">
        <button class="btn-mini outline logout-btn" type="submit">Logout</button>
